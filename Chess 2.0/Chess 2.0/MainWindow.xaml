<Window x:Class="Chess_2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess_2._0"
        mc:Ignorable="d"
        Title="MainWindow" Width="600">
    <Grid x:Name="BoardGrid"
              Width="600"
              Height="600"
              MouseDown="BoardGrid_MouseDown">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Board.png"/>
        </Grid.Background>

        <UniformGrid x:Name="HighlightGrid"
                         Rows="10"
                         Columns="9">
        </UniformGrid>

        <UniformGrid x:Name="PieceGrid"
                         Rows="8"
                         Columns="8"
                         RenderOptions.BitmapScalingMode="HighQuality">
        </UniformGrid>
    </Grid>
    
</Window>
