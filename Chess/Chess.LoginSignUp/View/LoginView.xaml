<Window x:Class="Chess.LoginSignUp.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess.LoginSignUp.View"
        mc:Ignorable="d"
        Title="LoginView" Height="600" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        AllowsTransparency="True">

    <Border CornerRadius="15">
        <Border.Background>
            <ImageBrush ImageSource="/Images/bg3.jpg"
                        Opacity=".3"
                        Stretch="UniformToFill"/>
        </Border.Background>
        <!--https://youtu.be/pZGcRHgmn8k?list=PLwG-AtjFaHdO802QyIrHRwN-StZtKlm9g&t=1156-->
        
        <Border CornerRadius="15"
                BorderThickness="1.5"
                Opacity=".85">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#7ADAA5" Offset="0"/>
                    <GradientStop Color="#088C6F" Offset="0.75"/>
                    <GradientStop Color="#DDF4E7" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0, 1" EndPoint="1,0">
                    <GradientStop Color="#096B68" Offset="0"/>
                    <GradientStop Color="#52357B" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="LOG IN"
                               Foreground="DarkGray"
                               FontSize="10"
                               FontFamily="Montserrat"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10 0 0 0"/>

                    <Button x:Name="btnMinimize"
                            BorderThickness="0"
                            Content="-"
                            Foreground="BlueViolet"
                            FontSize="16"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnMinimize_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28aeed"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#63C8FF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>

                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        
                    </Button>

                    <Button x:Name="btnClose"
                            BorderThickness="0"
                            Content="X"
                            FontWeight="SemiBold"
                            Foreground="red"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="btnClose_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#F75270"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C71E64"/>
                                        <Setter Property="Foreground" Value="#FF6F6F"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>

                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>
                </Grid>

                <StackPanel Width="250"
                            Grid.Row="2"
                            Orientation="Vertical"
                            Margin="0 35 0 0">
                    <Image Source="/images/logo2.png"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           Width="200" Height="200">
                        <Image.Effect>
                            <DropShadowEffect Color="Black" Direction="315" ShadowDepth="5" BlurRadius="5" Opacity="0.6"/>
                        </Image.Effect>
                    </Image>

                    <TextBlock Text="CHESS"
                               HorizontalAlignment="Center"
                               FontWeight="ExtraBold"
                               FontSize="50"
                               Foreground="#3E0703"
                               FontFamily="Freestyle Script"/>

                    <TextBlock Text='"Check in. Checkmate."'
                               HorizontalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="20"
                               Foreground="red"
                               FontFamily="Segoe Script"
                               TextAlignment="Center"
                               Margin="0 5 0 0"/>


                    <TextBlock Text="Username:"
                               FontSize="12"
                               Foreground="red"
                               FontFamily="Arial"
                               Margin="0 35 0 0"/>
                    
                    <TextBox x:Name="txtUsername"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Arial"
                             Background="Transparent">
                        
                    </TextBox>

                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
