<UserControl x:Class="Chess.Login_SignUp.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chess.Login_SignUp.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="800">

    <Grid>
        <Image Source="/Chess.Login-SignUp.UI;component/Images/key-icon.png"
                                        Width="15" Height="15"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        Margin="5 5 0 0"
                                        Opacity="1"/>

        <PasswordBox x:Name="txtPassword"
                                                FontSize="16"
                                                FontWeight="Medium"
                                                FontFamily="Arial"
                                                Foreground="Black"
                                                CaretBrush="Black"
                                                VerticalContentAlignment="Center"
                                                Cursor="Hand"
                                                Padding="20 0 0 0">
            <PasswordBox.Template>
                <ControlTemplate TargetType="PasswordBox">
                    <Border BorderBrush="BlueViolet" BorderThickness="1.5" CornerRadius="5">
                        <!-- VisualStateManager để xử lý các trạng thái khi có tiêu điểm -->
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualState x:Name="Unfocused">
                                    <!-- Trạng thái không có tiêu điểm: độ mờ thấp -->
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="BackgroundBrush"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0.1" Duration="0:0:0.2" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Focused">
                                    <!-- Trạng thái có tiêu điểm: độ mờ cao hơn -->
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="BackgroundBrush"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0.6" Duration="0:0:0.2" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <!-- Đặt Brush cho nền với tên để truy cập trong VisualState -->
                        <Border.Background>
                            <SolidColorBrush x:Name="BackgroundBrush" Color="LightCyan" Opacity="0.3" />
                        </Border.Background>

                        <!-- ScrollViewer cho nội dung của TextBox -->
                        <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                    </Border>
                </ControlTemplate>
            </PasswordBox.Template>
        </PasswordBox>
    </Grid>
</UserControl>
