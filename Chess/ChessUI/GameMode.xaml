<UserControl x:Class="ChessUI.GameMode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessUI"
             mc:Ignorable="d"
             d:Height="400"
             d:Width="400"
             HorizontalContentAlignment="Center"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            VerticalContentAlignment="Center">
    <Border
    Width="300"
    Height="300"
    Style="{StaticResource BorderStyle}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="1.2*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.ColumnSpan="3"
                   Text="SELECT MODE"
                   Style="{StaticResource TextStyle}"
                   FontSize="28"/>

            <Button Grid.Row="2"
                Grid.Column="0"
                Content="QUIT"
                Style="{StaticResource ButtonStyle}"
                Width="80"
                Height="30"
                Command="{Binding QuitCommand}"
                x:Name="Quit"
                Click="Quit_Click"/>

            <Button Grid.Row="2"
                Grid.Column="2"
                Content="PLAY"
                Style="{StaticResource ButtonStyle}"
                Width="80"
                Height="30"
                Command="{Binding PlayCommand}"
                x:Name="Play"
                Click="Play_Click"/>


            <ListBox Grid.Row="1"
                     Grid.ColumnSpan="3"
                     Style="{StaticResource ListBoxStyle}" Width="250"
                     x:Name="ModeListBox" SelectionChanged="ModeListBox_SelectionChanged"
                     SelectedItem="{Binding selectedOption, Mode=TwoWay}">
                <!--<ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Width" Value="120"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                </ListBox.ItemContainerStyle>-->
                <ListBoxItem Width="100" 
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center" Content="Bot Mode"/>

                <ListBoxItem Width="120"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center" Content="Human Mode"/>
            </ListBox>
        </Grid>
    </Border>
</UserControl>
