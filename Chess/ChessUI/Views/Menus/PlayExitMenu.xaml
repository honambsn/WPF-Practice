<UserControl x:Class="ChessUI.Views.Menus.PlayExitMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessUI.Views.Menus"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Style="{StaticResource BorderStyle}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="PLAY WITH BOT" Style="{StaticResource TextStyle}" FontSize="28" HorizontalAlignment="Center"/>
            <Button Content="EXIT" Style="{StaticResource ButtonStyle}" Width="80" Height="30" Click="Exit_Click"/>
        
            <Button Content="PLAY" Style="{StaticResource ButtonStyle}" Width="80" Height="30" Click="Play_Click"/>
        </StackPanel>
    </Border>
</UserControl>
