<UserControl x:Class="ChessUI.Views.Menus.ModeSelectMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessUI.Views.Menus"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="SELECT MODE" Style="{StaticResource TextStyle}" FontSize="28" HorizontalAlignment="Center"/>

        <Button Content="PLAY WITH BOT" Style="{StaticResource ButtonStyle}" Width="200" Height="30" Click="PvCButton_Click"/>

        <Button Content="PLAY WITH FRIEND" Style="{StaticResource ButtonStyle}" Width="200" Height="30" Click="PvPButton_Click"/>

        
    </StackPanel>
                
</UserControl>
