<UserControl x:Class="ChessUI.BotMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border
        Width="300"
        Height="300"
        Style="{StaticResource BorderStyle}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.ColumnSpan="2"
                       Text="PLAY WITH BOT"
                       Style="{StaticResource TextStyle}"
                       FontSize="28"/>

            <Button Grid.Row="2"
                    Content="EXIT"
                    Style="{StaticResource ButtonStyle}"
                    Width="80"
                    Height="30"
                    Command="{Binding ExitCommand}"/>
            <!--Click="Exit_Click"-->

            <Button Grid.Row="2"
                    Grid.Column="2"
                    Content="PLAY"
                    Style="{StaticResource ButtonStyle}"
                    Width="80"
                    Height="30"
                    Command="{Binding PlayCommand}"/>
            <!--Click="Play_Click"
                    x:Name="PlayButton"-->

            <ListBox Grid.Row="1"
                     Grid.ColumnSpan="2"
                     Style="{StaticResource ListBoxStyle}"
                     SelectedItem="{Binding SelectedDiff}"
                     SelectionChanged="ListBox_SelectionChanged">
                <ListBoxItem>Easy</ListBoxItem>
                <ListBoxItem>Medium</ListBoxItem>
                <ListBoxItem>Hard</ListBoxItem>
            </ListBox>
            <!--<ListBox Grid.Row="1"
                     Grid.ColumnSpan="2"
                     ItemsSource="{Binding Difficulties}"
                     SelectedItem="{Binding SelectedDiff, Mode=TwoWay}"
                     Style="{StaticResource ListBoxStyle}"/>-->

        </Grid>
    </Border>
</UserControl>
