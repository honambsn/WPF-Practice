<UserControl x:Class="ChessUI.Welcome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border
    Width="300"
    Height="300"
    Style="{StaticResource BorderStyle}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="1.2*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.ColumnSpan="3"
                   Text="SELECT MODE"
                   Style="{StaticResource TextStyle}"
                   FontSize="28"/>

            <Button Grid.Row="2"
                Grid.Column="0"
                Content="QUIT"
                Style="{StaticResource ButtonStyle}"
                Width="80"
                Height="30"
                Command="{Binding QuitCommand}"
                x:Name="Quit"
                Click="Quit_Click"/>

            <!--<Button Grid.Row="2"
                Grid.Column="1"
                Content="BACK"
                Style="{StaticResource ButtonStyle}"
                Width="80"
                Height="30"
                Click="Back_Click"
                Command="{Binding BackCommand}"/>-->
            <!--Command="{Binding ExitCommand}"/>-->
            <!--Click="Exit_Click"-->

            <Button Grid.Row="2"
                Grid.Column="2"
                Content="PLAY"
                Style="{StaticResource ButtonStyle}"
                Width="80"
                Height="30"
                Command="{Binding PlayCommand}"/>
            <!--Click="Play_Click"
                x:Name="PlayButton"-->

            <ListBox Grid.Row="1"
                     Grid.ColumnSpan="3"
                     Style="{StaticResource ListBoxStyle}" Width="250">
                <ListBoxItem Width="100" 
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center">Bot Mode</ListBoxItem>

                <ListBoxItem Width="120"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center">Human Mode</ListBoxItem>
            </ListBox>
        </Grid>
    </Border>
</UserControl>
