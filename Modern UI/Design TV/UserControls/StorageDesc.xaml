<UserControl x:Class="Design_TV.UserControls.StorageDesc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Name="storageDesc">
    
    <StackPanel Orientation="Horizontal" Margin="0 10">
        <Border CornerRadius="5" Width="20" Height="20" Margin="0 0 10 0"
                Background="{Binding ElementName=storageDesc, Path=Color}"/>

        <TextBlock FontSize="18" Foreground="White" Text="{Binding ElementName=storageDesc, Path=Title}"/>
    </StackPanel>
</UserControl>
