<UserControl x:Class="Design_TV.Pages.Time_Page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:uc="clr-namespace:Design_TV.UserControls">
    
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" MaxWidth="800" Margin="50 0">
        
        <uc:TimeSetting Title="Auto Attach" HasToggle="True" IsChecked="True"/>
        <uc:TimeSetting Title="Time Zone" HasText="True" HasToggle="False" Text="GMT +07:00, Asia..."/>
        <uc:TimeSetting Title="24 Hours" HasToggle="True"/>
        <uc:TimeSetting Title="More..."/>
        
    </StackPanel>
</UserControl>
