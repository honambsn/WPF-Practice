<UserControl x:Class="Design_TV.Pages.Setting_Page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:uc="clr-namespace:Design_TV.UserControls">
             
    <Grid Margin="20" x:Name="grid">
        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Auto" Padding="0 20"
                      VerticalAlignment="Center" Width="{Binding ElementName=grid, Path=ActualWidth}">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

                <uc:Element Title="Network Setting" Icon="Wifi" ElementClick="Element_ElementClick"/>
                <uc:Element Title="Time Setting" Icon="Timelapse" IsActive="True" ElementClick="Element_ElementClick_1"/>
                <uc:Element Title="Common" Icon="Layers" ElementClick="Element_ElementClick_2"/>
                <uc:Element Title="About Us" Icon="Information" ElementClick="Element_ElementClick_3"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
