<UserControl x:Class="Design_TV.Pages.Network_Page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:Design_TV.UserControls">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" MaxWidth="800" Margin="50 0">

        <uc:TimeSetting Title="Enable Wifi" HasToggle="True" IsChecked="True"/>
        <uc:TimeSetting Title="Network SDN-1" HasText="True" HasToggle="False" Text="... "/>
        <uc:TimeSetting Title="Network SDN-2" HasText="True" HasToggle="False" Text="... "/>
        <uc:TimeSetting Title="Network SDN-3" HasText="True" HasToggle="False" Text="... "/>
        <uc:TimeSetting Title="Enable Hostpot" HasToggle="True"/>
        <uc:TimeSetting Title="MAC Address"/>

    </StackPanel>
</UserControl>
