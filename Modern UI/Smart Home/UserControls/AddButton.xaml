<UserControl x:Class="Smart_Home.UserControls.AddButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Smart_Home.UserControls"
             mc:Ignorable="d" 
             Name="addButton"
             >
    <Button Width="300" VerticalAlignment="Top" HorizontalAlignment="Right" Style="{StaticResource addButton}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding ElementName=addButton, Path=Title}" VerticalAlignment="Center"/>

            <Border Margin="20 0 0 0" Width="37" Padding="10" Background="#3256f1" CornerRadius="50">
                <Image Source="../Icons/add.png" Opacity="1"/>
            </Border>
        </StackPanel>
    </Button>
</UserControl>
