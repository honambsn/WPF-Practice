<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- Define font families -->
    <FontFamily x:Key="DefaultFontFamily">Segoe UI</FontFamily>
    <FontFamily x:Key="HeadingFontFamily">Arial Black</FontFamily>
    <FontFamily x:Key="CustomFontFamily">'Roboto', sans-serif</FontFamily>

    <!-- Define font sizes directly without using <Double> -->
    <Style x:Key="DefaultTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="FontSize" Value="14" />
        <!-- Use a numeric value directly -->
        <Setter Property="Foreground" Value="Black" />
    </Style>

    <Style x:Key="HeadingTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource HeadingFontFamily}" />
        <Setter Property="FontSize" Value="24" />
        <!-- Use a numeric value directly -->
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="DarkSlateGray" />
    </Style>

</ResourceDictionary>